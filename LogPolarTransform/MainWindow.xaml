<Window x:Class="LogPolarTransform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Loader" Height="600" Width="900">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="loadImageButton" Content="Load Image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="loadImageButton_Click"/>
        <Button x:Name="rotateButton" Content="Rotate 90" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="75" Click="rotateButton_Click" Visibility="Collapsed"/>
        <Image x:Name="imageControlLeft" Grid.Row="1" Grid.Column="0" Stretch="None" Margin="10,0,0,0"/>
        <Image x:Name="imageControlRight" Grid.Row="1" Grid.Column="1" Stretch="None" Margin="0,0,10,0"/>
    </Grid>
</Window>